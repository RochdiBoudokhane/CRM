@model Solution.Presentation.Models.ForumTopicModel


@{
    ViewBag.Title = "Topic";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h1>Welcome to the @Model.forum.Title Forum!</h1>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.PostId">
                            @post.Title
                        </a>
                    <td>
                        @post.Content
                    </td>
                    <td>
                        @post.Created
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            It looks like there are no @Model.forum.Title posts yet. <br />
            Why not
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.forum.ForumId">
                <span> create </span>
            </a>
            one?
        </h3>
    </div>
}



