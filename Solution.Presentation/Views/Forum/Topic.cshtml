@{
    ViewBag.Title = "Topic";
}

<h2>Topic</h2>
<h1>Welcome to the @Model.Forum.Name Forum!</h1>

<span id="headingBtn">
    <a asp-controller="Post"
       asp-action="Create"
       asp-route-id=@Model.Forum.ForumId class="btn btn-newPost">
        Create Post
    </a>
</span>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.PostId">
                            @post.Title
                        </a>
                    <td>
                        @post.Description
                    </td>
                    <td>
                        @post.ImageUrl
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            It looks like there are no @Model.Forum.Title posts yet. <br />
            Why not
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.ForumId">
                <span> create </span>
            </a>
            one?
        </h3>
    </div>
}



